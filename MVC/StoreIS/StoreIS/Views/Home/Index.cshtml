@using StoreIS.Models.ShoppingList
@model IEnumerable<ShoppingListViewModel>

@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center">
	<h1 class="display-4">Welcome to StoreIS</h1>
</div>
<div class="home-wrapper">
	@if (User.Identity.IsAuthenticated)
	{
		@if (Model.Count() > 0)
		{
			foreach (var list in Model)
			{
				<a class="btn btn-success list-home" asp-controller="ShoppingList" asp-action="Details" asp-route-listId="@list.Id">@list.Name <i class="fas fa-shopping-cart"></i></a>
			}
		}
		else
		{
			<p class="index-msg">You dont have any shopping lists yet</p>
			<p class="index-msg">Create your first shopping list <a asp-controller="ShoppingList" asp-action="Create">here</a></p>
		}
	}
	else
	{
		<p class="index-msg">Sign up to create your own shopping list!</p>
	}
</div>

