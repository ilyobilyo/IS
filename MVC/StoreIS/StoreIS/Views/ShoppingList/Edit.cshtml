@using StoreIS.Models.ShoppingList
@using System.Security.Claims
@model EditListViewModel

<form id="editList" method="post">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>

	<input type="hidden" asp-for="UserId" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)"/>
	<input type="hidden" value="@Model.Id" asp-for="Id"/>

	<label>List Name</label>
	<input asp-for="Name" type="text" name="name" value="@Model.Name"/>

	<button type="submit" class="btn btn-info" >Edit</button>
</form>